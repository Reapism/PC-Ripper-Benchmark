<Window x:Name="windowMain" x:Class="PC_Ripper_Benchmark.window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PC_Ripper_Benchmark"
        mc:Ignorable="d"
        Title="PC Ripper Benchmark Tool" Height="450" Width="800" Background="#FFDCD8D8" WindowStartupLocation="CenterScreen" WindowState="Maximized" MinWidth="800" MinHeight="450" Icon="/PC Ripper Benchmark;component/resources/pc_ripper_icon.ico">
    <Grid x:Name="grdMain" Margin="0" MinHeight="420" MinWidth="790">
        <Grid x:Name="grdNavigation" HorizontalAlignment="Left" MinWidth="50" Background="#BF84B8E4" MinHeight="400" VerticalAlignment="Stretch" Width="150">
            <StackPanel x:Name="stkNavigation" HorizontalAlignment="Left" Margin="0" VerticalAlignment="Top" MinWidth="150" MinHeight="420" Height="322"/>
            <Button x:Name="btnTemp" Content="Show Quest." HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="BtnTemp_Click"/>
            <Button x:Name="btnCPU" Content="CPU" HorizontalAlignment="Left" Margin="10,25,0,0" VerticalAlignment="Top" Width="130" Height="74" MouseEnter="BtnCPU_MouseEnter" MouseLeave="BtnCPU_MouseLeave" Click="BtnCPU_Click"/>
            <Button x:Name="btnRAM" Content="RAM" HorizontalAlignment="Left" Margin="10,104,0,0" VerticalAlignment="Top" Width="130" Height="74" MouseEnter="BtnRAM_MouseEnter" MouseLeave="BtnRAM_MouseLeave" Click="BtnRAM_Click"/>
            <Button x:Name="btnDisk" Content="DISK" HorizontalAlignment="Left" Margin="10,183,0,0" VerticalAlignment="Top" Width="130" Height="74" MouseEnter="BtnDisk_MouseEnter" MouseLeave="BtnDisk_MouseLeave" Click="BtnDisk_Click"/>
        </Grid>
        <Grid x:Name="grdTop" Margin="150,0,0,0" VerticalAlignment="Top" Background="#FF4C5461" MinHeight="100" MinWidth="650" Grid.ColumnSpan="2"/>
        <Grid x:Name="grdWindow" Margin="150,100,0,0" Grid.ColumnSpan="2" MinWidth="640" MinHeight="320">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFB0ABAB"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <TabControl x:Name="tabComponents" Margin="0" MinWidth="640" MinHeight="320" Foreground="Black" Background="#FFB9B8B8">
                <TabControl.BorderBrush>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0E3619" Offset="0.196"/>
                        <GradientStop Color="#FF31B054" Offset="1"/>
                    </LinearGradientBrush>
                </TabControl.BorderBrush>
                <TabItem x:Name="tabWelcome" Header="Welcome &lt;name&gt;, Profile" BorderBrush="#FF7E2F2F">
                    <Grid x:Name="grdWelcome">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFBBBBBB" Offset="1"/>
                                <GradientStop Color="White"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                        <StackPanel Height="100" Margin="0,5,0,0" VerticalAlignment="Top" MinHeight="100" MinWidth="100">
                            <TextBlock x:Name="txtblkWelcome" TextWrapping="WrapWithOverflow" HorizontalAlignment="Left" Text="Welcome &lt;user&gt; to the PC Ripper Benchmark. Below you can find your computer specifications." FontSize="18" Margin="36,0,0,0"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabCPU" Header="CPU">
                    <Grid x:Name="grdCPU">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFBBBBBB" Offset="1"/>
                                <GradientStop Color="White"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                        <StackPanel x:Name="stkCPU" Margin="0,6,0,237" MinHeight="60">
                            <TextBlock x:Name="txtCPUWelcome" TextWrapping="Wrap" Text="Welcome to the CPU benchmarking tab! Below you can learn more about how the test works. " FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Grid x:Name="grdCPUTests" Margin="0,65,0,0" VerticalAlignment="Top" MinHeight="110" MinWidth="636">
                            <Image x:Name="imgCPUSuccessorship" Margin="-500,10,0,0" Source="/PC Ripper Benchmark;component/resources/cpu_successorship.png" ToolTip="The successorship function runs a loop counting 1 to (n)." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300" Width="100" Height="100" StretchDirection="DownOnly">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgCPUBoolean" Height="100" Margin="-250,10,0,0" Width="100" Source="/PC Ripper Benchmark;component/resources/cpu_bool.png" ToolTip="The boolean logic test compares to random numbers and returns which one is greater than the other (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgCPUQueue" Height="100" Margin="0" Width="100" Source="/PC Ripper Benchmark;component/resources/cpu_queue.png" ToolTip="The queue data structure tests adds, removes, and searches random numbers from its contents (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgCPULinkedList" Height="100" Margin="250,10,0,0" Width="100" Source="/PC Ripper Benchmark;component/resources/cpu_list.png" ToolTip="The linked list data structure tests adds, removes, and searches random numbers from its contents (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgCPUTree" Height="100" Margin="500,10,0,0" Width="100" Source="/PC Ripper Benchmark;component/resources/cpu_tree.png" ToolTip="The tree data structure tests adds, removes, and searches random numbers from its contents (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                        </Grid>
                        <Grid x:Name="grdCPUResults" Height="100" Margin="0,192,0,0" Width="636" MinWidth="636" VerticalAlignment="Bottom">
                            <TextBlock x:Name="txtCPUChooseThreadType" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="What type of test would you like to perform?" VerticalAlignment="Top" FontSize="18"/>
                            <RadioButton x:Name="radCPUSingle" Content="Single threaded" HorizontalAlignment="Center" Margin="-200,34,0,0" VerticalAlignment="Top"/>
                            <RadioButton x:Name="radCPUMultithread" Content="Multi threaded" HorizontalAlignment="Center" Margin="200,34,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                            <Button x:Name="btnCPURunTest" Content="Run the CPU test" Margin="0,60,0,10" VerticalAlignment="Center" Click="BtnRunTest_Click" HorizontalAlignment="Center" Width="124" MinWidth="125" MinHeight="30"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabDisk" Header="Disk">
                    <Grid x:Name="grdDisk">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFBBBBBB" Offset="1"/>
                                <GradientStop Color="White"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                        <StackPanel x:Name="stkDisk" Margin="0,6,0,237" MinHeight="60">
                            <TextBlock x:Name="txtDiskWelcome" TextWrapping="Wrap" Text="Welcome to the DISK benchmarking tab! Below you can learn more about how the test works. " FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Grid x:Name="grdDiskTests" Margin="0,65,0,0" VerticalAlignment="Top" MinHeight="110" MinWidth="636">
                            <Image x:Name="imgDiskFolderMatrix" Margin="-500,10,0,0" Source="/PC Ripper Benchmark;component/resources/pc_ripper_icon.ico" ToolTip="The successorship function runs a loop counting 1 to (n)." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300" Width="100" Height="100" StretchDirection="DownOnly">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgDiskBulkFile" Height="100" Margin="-250,10,0,0" Width="100" Source="/PC Ripper Benchmark;component/resources/pc_ripper_icon.ico" ToolTip="The boolean logic test compares to random numbers and returns which one is greater than the other (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgDiskReferenceDereference" Height="100" Margin="0" Width="100" Source="/PC Ripper Benchmark;component/resources/pc_ripper_icon.ico" ToolTip="The queue data structure tests adds, removes, and searches random numbers from its contents (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                        </Grid>
                        <Grid x:Name="grdDiskResults" Height="100" Margin="0,192,0,0" Width="636" MinWidth="636" VerticalAlignment="Bottom">
                            <TextBlock x:Name="txtDiskChooseThreadType" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="What type of test would you like to perform?" VerticalAlignment="Top" FontSize="18"/>
                            <RadioButton x:Name="radDiskSingle" Content="Single threaded" HorizontalAlignment="Center" Margin="-200,34,0,0" VerticalAlignment="Top"/>
                            <RadioButton x:Name="radDiskMultithread" Content="Multi threaded" HorizontalAlignment="Center" Margin="200,34,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                            <Button x:Name="btnDiskRunTest" Content="Run the DISK test" Margin="0,60,0,10" VerticalAlignment="Center" Click="BtnRunTest_Click" HorizontalAlignment="Center" Width="124" MinWidth="125" MinHeight="30"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabRAM" Header="RAM">
                    <Grid x:Name="grdRAM">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFBBBBBB" Offset="1"/>
                                <GradientStop Color="White"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                        <StackPanel x:Name="stkRAM" Margin="0,6,0,237" MinHeight="60">
                            <TextBlock x:Name="txtRAMWelcome" TextWrapping="Wrap" Text="Welcome to the RAM benchmarking tab! Below you can learn more about how the test works. " FontSize="18" HorizontalAlignment="Center"/>
                        </StackPanel>
                        <Grid x:Name="grdRAMTests" Margin="0,65,0,0" VerticalAlignment="Top" MinHeight="110" MinWidth="636">
                            <Image x:Name="imgRamFolderMatrix" Margin="-500,10,0,0" Source="/PC Ripper Benchmark;component/resources/cpu_successorship.png" ToolTip="The successorship function runs a loop counting 1 to (n)." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300" Width="100" Height="100" StretchDirection="DownOnly">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgRamBulkFile" Height="100" Margin="-250,10,0,0" Width="100" Source="/PC Ripper Benchmark;component/resources/cpu_bool.png" ToolTip="The boolean logic test compares to random numbers and returns which one is greater than the other (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                            <Image x:Name="imgRamReferenceDereference" Height="100" Margin="0" Width="100" Source="/PC Ripper Benchmark;component/resources/cpu_queue.png" ToolTip="The queue data structure tests adds, removes, and searches random numbers from its contents (n) times." MinWidth="100" MinHeight="100" MaxWidth="300" MaxHeight="300">
                                <Image.Effect>
                                    <DropShadowEffect BlurRadius="15" Opacity="0.6"/>
                                </Image.Effect>
                            </Image>
                        </Grid>
                        <Grid x:Name="grdRamResults" Height="100" Margin="0,192,0,0" Width="636" MinWidth="636" VerticalAlignment="Bottom">
                            <TextBlock x:Name="txtRamChooseThreadType" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="What type of test would you like to perform?" VerticalAlignment="Top" FontSize="18"/>
                            <RadioButton x:Name="radRamSingle" Content="Single threaded" HorizontalAlignment="Center" Margin="-200,34,0,0" VerticalAlignment="Top"/>
                            <RadioButton x:Name="radRamMultithread" Content="Multi threaded" HorizontalAlignment="Center" Margin="200,34,0,0" VerticalAlignment="Top" IsEnabled="False"/>
                            <Button x:Name="btnRamRunTest" Content="Run the RAM test" Margin="0,60,0,10" VerticalAlignment="Center" Click="BtnRamRunTest_Click" HorizontalAlignment="Center" Width="124" MinWidth="125" MinHeight="30"/>
                        </Grid>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabGPU" Header="GPU">
                    <Grid x:Name="grdGPU">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFBBBBBB" Offset="1"/>
                                <GradientStop Color="White"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabSettings" Header="Settings">
                    <Grid x:Name="grdSettings">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FFBBBBBB" Offset="1"/>
                                <GradientStop Color="White"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabTestResults" Header="Results">
                    <Grid x:Name="grdResults">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF9FC791" Offset="1"/>
                                <GradientStop Color="#FFD9F5CF"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                        <TextBlock x:Name="txtBlkResults" HorizontalAlignment="Center" Margin="0" TextWrapping="Wrap" Text="Results the {} test." VerticalAlignment="Top" FontSize="18" Foreground="Black"/>
                        <RichTextBox x:Name="txtResults" Margin="0,150,0,0" MinWidth="100" MinHeight="100" IsReadOnly="True" FontSize="18" Background="#4CFFFFFF" BorderBrush="#FF2C742C" VerticalScrollBarVisibility="Auto">
                            <RichTextBox.ContextMenu>
                                <ContextMenu>
                                    <MenuItem x:Name="menuResultsSelectAll" Header="Select All"/>
                                    <MenuItem x:Name="menuResultsCopy" Header="Copy"/>
                                    <Separator/>
                                    <MenuItem x:Name="menuResultsExprt" Header="Export">
                                        <MenuItem x:Name="menuResultsExprtTxt" Header="Text-File" Click="MenuResultsExprtTxt_Click"/>
                                        <MenuItem x:Name="menuResultsExprtXaml" Header="XAML" Click="MenuResultsExprtXaml_Click"/>
                                    </MenuItem>
                                </ContextMenu>
                            </RichTextBox.ContextMenu>
                            <FlowDocument>
                                <Paragraph/>
                            </FlowDocument>
                        </RichTextBox>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabRunningTest" Header="Running Test">
                    <Grid x:Name="grdRunningTest">
                        <Grid.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#FF9FC791" Offset="1"/>
                                <GradientStop Color="#FFD9F5CF"/>
                            </RadialGradientBrush>
                        </Grid.Background>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
